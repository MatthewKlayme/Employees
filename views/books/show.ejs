<h2><%= book.title %> </h2>
<img width = "100" height = "150" src="<%= book.coverImagePath %> ">
<% if(book.author.id != null) {%> 
<div>Author: <a href="/authors/<%= book.author.id %>"><%= book.author.name %> </a> </div>
<% } %> 
<div>Pusblish Date: <%= book.publishDate.toDateString() %> </div>
<div>Page Count: <%= book.pageCount %> </div>
<div>Description: <%= book.description %> </div>

<a href="/books/<%= book.id %>/edit">Edit</a>
<%- include('../partials/deleteForm', {url: `/books/${book.id}`}) %> 
